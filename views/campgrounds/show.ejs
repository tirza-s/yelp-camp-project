<!-- USING BOILERPLATE EJS TO HAVE THE SAME LAYOUT ->  https://github.com/JacksonTian/ejs-mate -->
<% layout("layout/boilerplate") %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%= campground.image%>" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title%>
                    </h5>
                    <p class="card-text">
                        <%=campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item text-muted">â‚¬<%=campground.price%>/night</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago <br>
                    <a href="/campgrounds/">Back to all campground</a>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->

        <div class="col-6">
            <h2>Write your review</h2>
            <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review:</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="20" rows="5" required></textarea>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>

            <!-- Loop trough the reviews to show on the page-->

            <% for(let review of campground.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating%></h5>
                        <p class="card-text">Reviews: <%= review.body%></p>
                        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    </div>
                </div>
                <% }%>
        </div>
    </div>